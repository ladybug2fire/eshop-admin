<%- contentFor('body') %>

<a href="/admin/user/new"><button class="btn btn-primary btn-sm">新增用户</button></a>

<table id="user" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>头像</th>
            <th>用户名</th>
            <th>密码</th>
            <th>性别</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody>
        <% list.forEach(function(l){ %>
            <tr>
                <td><img class="snap-shot" src="<%- l.avatar %>" alt=""></td>
                <td><%- l.username %></td>
                <td><%- l.password %></td>
                <td><%- l.sex %></td>
                <td>
                    <a style="cursor:pointer" onclick="deleteUser('<%- l._id %>')">删除</a>
                </td>
            </tr>
        <% }); %>
    </tbody>
</table>
<style>
    .snap-shot {
        width: 80px;
        height: 80px;
    }
</style>
<script>
    $(function () {
        $('#user').DataTable()
    })
    var deleteUser = function (id) {
        $.get('/admin/user/delete', {
            id,
        }, function (res) {
            if (res.code === 200) {
                alert('删除成果');
                window.location.reload();
            }
            console.log(res);
        })
    }
    $(function () {
        $('#good').DataTable()
    })
</script>